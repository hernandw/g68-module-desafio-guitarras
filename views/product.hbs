<main class="product-details">
    
    <div class="product-image">
      <img src="{{guitar.imageurl}}" alt="{{guitar.name}}">
    </div>
    
    <div class="product-info">
      <h1>{{guitar.name}}</h1>

      <p><strong>Brand:</strong> {{guitar.brand}}</p>
      <p><strong>Model:</strong> {{guitar.model}}</p>
      <p><strong>Body Type:</strong> {{guitar.body}}</p>
      <p><strong>Color:</strong> {{guitar.color}}</p>
      <p><strong>Pickups:</strong> {{guitar.pickups}}</p>
      <p><strong>Number of Strings:</strong> {{guitar.string}}</p>
      <p><strong>Price:</strong> ${{guitar.price}}</p>
      <p><strong>Stock:</strong> {{guitar.stock}}</p>
    </div>
   
  </main>