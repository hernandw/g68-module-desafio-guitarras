 <main>
    
    <section class="banner">
      
      <h1>Discover Your Sound with Tone Master</h1>
      <a href="/guitars" class="btn">Shop Now</a>
    </section>
    <section class="featured-products">
      <h2>Featured Products</h2>
      <div class="product-grid">
        {{#if products}}
          {{#each products}}
          <div class="product-card">
            <img src="{{this.imageurl}}" alt="{{this.name}}">
            <h3>{{this.name}}</h3>
            <p>${{this.price}}</p>
            <a href="/guitars/{{this.id}}" class="btn">View Details</a>
          </div>
        {{/each}}
        {{else}}
          <p>No products found.</p>
        {{/if}}
      </div>
    
  </main>
  